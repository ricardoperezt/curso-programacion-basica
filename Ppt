<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Piedra, papel o tijera</title>
</head>
<body>
  <h1>Piedra, papel o tijera</h1>
  <script>
    function aleatorio(min, max) {
      return Math.floor(Math.random() * (max - min + 1) + min);
    }

    let opciones = ["piedra 🪨", "papel 📃", "tijera ✂️"];
    let jugador = parseInt(prompt("Elige: 1 para piedra, 2 para papel, 3 para tijera"), 10);
    let pc = aleatorio(1, 3);
    
    alert("Elegiste " + opciones[jugador - 1]);
    alert("La PC eligió " + opciones[pc - 1]);

    if (pc == jugador) {
      alert("EMPATE");
    } else if ((jugador == 1 && pc == 3) || (jugador == 2 && pc == 1) || (jugador == 3 && pc == 2)) {
      alert("GANASTE");
    } else {
      alert("PERDISTE");
    }
  </script>
</body>
</html>
